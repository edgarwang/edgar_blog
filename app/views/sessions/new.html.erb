<%= form_tag sign_in_path, class: "ui error form segment" do %>
  <div class="field">
    <%= label_tag :email %><br>
    <div class="ui left labeled icon input">
      <%= text_field_tag :email %>
      <i class="mail icon"></i>
    </div>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <div class="ui left labeled icon input">
      <%= password_field_tag :password %>
      <i class="lock icon"></i>
    </div>
  </div>
  <%= submit_tag "Login", class: "ui blue submit button" %>
<% end %>
