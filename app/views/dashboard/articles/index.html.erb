<%= render "dashboard/article_toolbar" %>
<div class="ui selection list">
  <% @articles.each do |article| %>
    <div id="article-<%= article.id %>" class="article item">
      <div class="right floated">
        <div class="ui basic buttons">
          <% if article.published? %>
            <%= link_to [:dashboard, article], class: 'ui button' do %>
              <i class="external url icon"></i>
            <% end %>
          <% end %>
          <a class="ui trash article button" title="Trash it"
            data-send-to-trash-path="<%= send_to_trash_dashboard_article_path(article) %>">
            <i class="trash icon"></i>
          </a>
        </div>
      </div>

      <div class="content">
        <div class="header">
          <%= link_to article.title, edit_dashboard_article_path(article) %>
        </div>
        <%= article.updated_at %>
      </div>
    </div>
  <% end %>
</div>
